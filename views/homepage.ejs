            <div class="container">
                <h4><b>Rocketry</b></h4>
                <p>Rating:9.5/10</p>
                <button class="book" type="submit"><a href="/tickets.html">Book Now</a></button>
            </div>
        </div>
    </div> 
    <div class="new">
        <h3>Upcoming Movies(Updated by admin)</h3>
    </div>
    <div class="fromDatabase">
    
        <%moviesList.forEach(movie => {%>
            <p><b><%= movie.username%></b></p>
         <%})%>
    </div>
</body>
<style> 

@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500&display=swap');

.new h3{
    margin: 3rem;
}
.fromDatabase p{
    margin: 1rem;
}
.fromDatabase{
    font-family: 'Roboto', sans-serif;
    display: flex;
    flex-direction: row;
    margin: 3rem;
    width : 80%;
    display: flex;
    height: 50px;
    border-radius: 5px;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    transition: 0.3s;
}
.fromDatabase:hover {
    box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
}
* {
    margin: 0;
    padding: 0;
}

body {
    font-family: 'Roboto', sans-serif;
    position: relative;
}

header {
    height: 5rem;
    background-color: #333545;
    color: white;
    width: 100%;
}

header h1 {
    position: absolute;
    top: 1rem;
    left: 3.5rem;
}

.navbar {
    position: absolute;
    color: white;
    top: 2rem;
    right: 2.5rem;
}

ul {
    display: flex;
}

li {
    list-style: none;
    padding: 0 1rem;
}

a {
    list-style: none;
    text-decoration: none;
    color: white;
}

.card{
    margin: 1rem;
    width : 400px;
    display: flex;
    height: 200px;
    border-radius: 5px;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    transition: 0.3s;
}
img {
    width: 100px;
    height: 200px; 
    border-radius: 5px 5px 0 0;
  }

.card:hover {
    box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
}

.container{
    width: 150px;
    padding: 2px 20px;
}
.components{
    padding: 2rem;
    display: flex;
}
.book{
    cursor: pointer;
    margin-top: 20px;
    padding: 5px;
    border: 2px solid transparent;
    border-radius: 6px;
    color: white;
    background-color: #f84464;
}
</style>
</html>